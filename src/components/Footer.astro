---
import content from '../data/siteContent.json';
---

<footer class="bg-gray-900 text-white pt-16 pb-8 border-t border-gray-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-12 mb-12">
            <!-- Branding -->
            <div>
                <div class="flex items-center gap-3 mb-4">
                    <img src="/logo-icon.png" alt="Evolutiva Soft" class="h-12 w-auto brightness-0 invert opacity-90 transition-opacity hover:opacity-100" />
                    <span class="text-2xl font-bold text-white">EVOLUTIVA <span class="text-secondary">SOFT</span></span>
                </div>
                <p class="text-gray-400 text-sm leading-relaxed mb-6">
                    {content.footer.brandDescription}
                </p>
                <div class="flex space-x-4">
                    <a href="#" class="text-gray-400 hover:text-white transition-colors">LinkedIn</a>
                </div>
            </div>

            <!-- Enlaces -->
            <div>
                <h4 class="text-lg font-semibold mb-4 text-gray-200">{content.footer.menuTitle}</h4>
                <ul class="space-y-2">
                    {content.footer.menu.map((item) => (
                        <li><a href={item.href} class="text-gray-400 hover:text-blue-400 text-sm transition-colors">{item.text}</a></li>
                    ))}
                </ul>
            </div>

            <!-- Contacto Simple -->
            <div>
                 <h4 class="text-lg font-semibold mb-4 text-gray-200">{content.footer.contactTitle}</h4>
                 <ul class="space-y-3 text-sm text-gray-400">
                    {content.footer.contact.map((item) => (
                        <li>
                            <a href={item.href} class="hover:text-blue-400 transition-colors">{item.text}</a>
                        </li>
                    ))}
                 </ul>
            </div>
        </div>
        
        <div class="border-t border-gray-800 pt-8 text-center">
            <p class="text-sm text-gray-600">&copy; {new Date().getFullYear()} EVOLUTIVA SOFT. Todos los derechos reservados.</p>
        </div>
    </div>
</footer>
