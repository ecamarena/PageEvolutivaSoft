---
import MainLayout from '../layouts/MainLayout.astro';
import content from '../data/siteContent.json';
---

<MainLayout title={content.contactPage.title} description={content.contactPage.subtitle}>
    <section class="bg-gray-50 py-20 mt-24 min-h-screen relative">
         <div class="absolute right-0 bottom-0 opacity-5 pointer-events-none">
            <img src="/logo-icon.png" alt="Watermark" class="w-[500px] h-[500px] object-contain" />
        </div>

        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
            <div class="text-center mb-16">
                <h1 class="text-4xl font-bold text-gray-900 mb-4">{content.contactPage.title}</h1>
                <p class="text-xl text-gray-600">{content.contactPage.subtitle}</p>
            </div>

            <div class="grid md:grid-cols-2 gap-12 bg-white rounded-3xl shadow-xl overflow-hidden border border-gray-100">
                <!-- Info Section -->
                <div class="bg-primary p-12 text-white relative overflow-hidden">
                    <div class="absolute -left-10 -bottom-10 w-64 h-64 opacity-10 animate-float-slow">
                         <img src="/logo-icon.png" alt="" class="w-full h-full object-contain brightness-0 invert" />
                    </div>

                    <h2 class="text-3xl font-bold mb-8 relative z-10">{content.contactPage.infoTitle}</h2>
                    <p class="text-blue-100 mb-12 relative z-10">
                        {content.contactPage.infoSubtitle}
                    </p>

                    <div class="space-y-8 relative z-10">
                        <div class="flex items-center space-x-4">
                            <div class="w-12 h-12 bg-white/10 rounded-lg flex items-center justify-center flex-shrink-0">
                                <svg class="w-6 h-6 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg>
                            </div>
                             <span>{content.contactPage.phone}</span>
                        </div>
                        <div class="flex items-center space-x-4">
                             <div class="w-12 h-12 bg-white/10 rounded-lg flex items-center justify-center flex-shrink-0">
                                <svg class="w-6 h-6 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
                            </div>
                            <span>{content.contactPage.email}</span>
                        </div>
                        <div class="flex items-center space-x-4">
                             <div class="w-12 h-12 bg-white/10 rounded-lg flex items-center justify-center flex-shrink-0">
                                <svg class="w-6 h-6 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                            </div>
                            <span>{content.contactPage.address}</span>
                        </div>
                    </div>

                     <div class="mt-12 flex space-x-4 relative z-10">
                        <!-- Socials -->
                        <a href="#" class="w-10 h-10 bg-white/10 rounded-full flex items-center justify-center hover:bg-secondary transition-colors text-white">
                            <span class="sr-only">Twitter</span>
                             <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24"><path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/></svg>
                        </a>
                         <a href="#" class="w-10 h-10 bg-white/10 rounded-full flex items-center justify-center hover:bg-secondary transition-colors text-white">
                            <span class="sr-only">LinkedIn</span>
                             <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24"><path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/></svg>
                        </a>
                    </div>
                </div>

                <!-- Form Section -->
                <div class="p-12">
                     <form class="space-y-6">
                        <div class="grid md:grid-cols-2 gap-6">
                            <div>
                                <label for="nombre" class="block text-sm font-medium text-gray-700 mb-2">{content.contactPage.form.nameLabel}</label>
                                <input type="text" id="nombre" name="nombre" class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-primary outline-none transition-all bg-gray-50" placeholder={content.contactPage.form.namePlaceholder}>
                            </div>
                            <div>
                                <label for="apellido" class="block text-sm font-medium text-gray-700 mb-2">{content.contactPage.form.surnameLabel}</label>
                                <input type="text" id="apellido" name="apellido" class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-primary outline-none transition-all bg-gray-50" placeholder={content.contactPage.form.surnamePlaceholder}>
                            </div>
                        </div>

                        <div>
                            <label for="email" class="block text-sm font-medium text-gray-700 mb-2">{content.contactPage.form.emailLabel}</label>
                            <input type="email" id="email" name="email" class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-primary outline-none transition-all bg-gray-50" placeholder={content.contactPage.form.emailPlaceholder}>
                        </div>

                        <div>
                            <label for="mensaje" class="block text-sm font-medium text-gray-700 mb-2">{content.contactPage.form.messageLabel}</label>
                            <textarea id="mensaje" name="mensaje" rows="4" class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-primary outline-none transition-all bg-gray-50" placeholder={content.contactPage.form.messagePlaceholder}></textarea>
                        </div>

                        <button type="submit" class="w-full bg-secondary hover:bg-lime-600 text-white font-bold py-4 rounded-lg transition-colors shadow-lg hover:shadow-xl transform hover:-translate-y-0.5">
                            {content.contactPage.form.submitButton}
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </section>
</MainLayout>
