---
import MainLayout from '../layouts/MainLayout.astro';
import content from '../data/siteContent.json';
---

<MainLayout title={content.aboutPage.title} description={content.aboutPage.subtitle}>
    <!-- Header -->
    <section class="bg-gray-100 py-20 mt-24 relative overflow-hidden">
         <!-- Watermark Decoration -->
        <div class="absolute -right-20 -top-20 opacity-5 pointer-events-none">
            <img src="/logo-icon.png" alt="Watermark" class="w-96 h-96 object-contain" />
        </div>

        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10">
            <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">{content.aboutPage.title}</h1>
            <p class="text-xl text-gray-600 max-w-2xl mx-auto">{content.aboutPage.subtitle}</p>
        </div>
    </section>

    <!-- Historia / Descripción -->
    <section class="py-20 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid md:grid-cols-2 gap-12 items-center">
                <div class="relative h-64 md:h-96 rounded-2xl overflow-hidden shadow-xl bg-gray-200 group">
                     <!-- 3D Logo in "glass" style for the image placeholder -->
                    <div class="absolute inset-0 bg-primary flex items-center justify-center p-12">
                         <img src="/logo-icon.png" alt="Evolutiva Mark" class="w-1/2 h-1/2 object-contain opacity-80 filter drop-shadow-2xl animate-float-slow" />
                    </div>
                </div>
                <div>
                    <h2 class="text-3xl font-bold text-gray-900 mb-6">{content.aboutPage.storyTitle}</h2>
                    <p class="text-gray-600 mb-4 leading-relaxed">
                        {content.aboutPage.storyText1}
                    </p>
                    <p class="text-gray-600 leading-relaxed">
                        {content.aboutPage.storyText2}
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- Misión y Visión -->
    <section class="py-20 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid md:grid-cols-2 gap-8">
                <!-- Misión -->
                <div class="bg-white p-10 rounded-2xl shadow-sm border border-gray-100 hover:shadow-md transition-shadow">
                    <div class="inline-flex items-center justify-center w-12 h-12 rounded-full bg-blue-100 text-primary mb-6">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg>
                    </div>
                    <h3 class="text-2xl font-bold text-gray-900 mb-4">{content.aboutPage.mission.title}</h3>
                    <p class="text-gray-600">
                        {content.aboutPage.mission.text}
                    </p>
                </div>

                <!-- Visión -->
                <div class="bg-white p-10 rounded-2xl shadow-sm border border-gray-100 hover:shadow-md transition-shadow">
                    <div class="inline-flex items-center justify-center w-12 h-12 rounded-full bg-lime-100 text-secondary mb-6">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/></svg>
                    </div>
                    <h3 class="text-2xl font-bold text-gray-900 mb-4">{content.aboutPage.vision.title}</h3>
                    <p class="text-gray-600">
                        {content.aboutPage.vision.text}
                    </p>
                </div>
            </div>
        </div>
    </section>
</MainLayout>
