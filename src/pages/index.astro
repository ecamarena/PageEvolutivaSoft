---
import MainLayout from '../layouts/MainLayout.astro';
import content from '../data/siteContent.json';
---

<MainLayout title="EVOLUTIVA SOFT">
    <!-- 1. HERO -->
    <section class="min-h-screen bg-primary flex items-center pt-24 relative overflow-hidden">
        <!-- Background decoration -->
        <div class="absolute inset-0 opacity-20 pointer-events-none">
             <!-- Floating 3D Logo Effect using existing logo with CSS -->
            <div class="absolute top-1/4 right-10 w-96 h-96 opacity-30 animate-float-slow hidden lg:block">
                 <img src="/logo-icon.png" alt="Evolutiva Background" class="w-full h-full object-contain filter drop-shadow-[0_0_15px_rgba(132,204,22,0.5)]" />
            </div>
            
            <div class="absolute top-0 left-0 w-96 h-96 bg-secondary rounded-full filter blur-3xl -translate-x-1/2 -translate-y-1/2 mix-blend-screen"></div>
            <div class="absolute bottom-0 right-0 w-96 h-96 bg-blue-500 rounded-full filter blur-3xl translate-x-1/2 translate-y-1/2 mix-blend-screen"></div>
        </div>

        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 text-center relative z-10 text-white">
            <h1 class="text-4xl md:text-6xl font-extrabold leading-tight mb-6 animate-fade-in-up">
                {content.hero.titleStart} <span class="text-secondary relative inline-block">
                    {content.hero.titleHighlight}
                    <svg class="absolute w-full h-2 bottom-0 left-0 text-secondary opacity-50" viewBox="0 0 100 10" preserveAspectRatio="none"><path d="M0 5 Q 50 10 100 5" stroke="currentColor" stroke-width="2" fill="none"/></svg>
                </span>
            </h1>
            <p class="text-xl md:text-2xl text-gray-300 mb-10 max-w-3xl mx-auto leading-relaxed">
                {content.hero.subtitle}
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a href="#contact" class="px-8 py-4 bg-secondary text-white rounded-lg font-bold hover:bg-lime-600 transition-all shadow-lg hover:shadow-lime-500/30 transform hover:-translate-y-1">
                    {content.hero.ctaPrimary}
                </a>
                <a href="#how-we-work" class="px-8 py-4 bg-transparent text-white rounded-lg font-semibold border border-white/30 hover:bg-white/10 transition-all shadow-sm">
                    {content.hero.ctaSecondary}
                </a>
            </div>
        </div>
    </section>

    <!-- 2. EL PROBLEMA -->
    <section class="py-20 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="max-w-3xl mx-auto text-center mb-12">
                <h2 class="text-3xl font-bold text-gray-900 mb-6">{content.problem.title}</h2>
                <p class="text-xl text-gray-600">
                    {content.problem.description}
                </p>
            </div>
            <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
                <div class="bg-red-50 p-6 rounded-xl border border-red-100">
                    <ul class="space-y-4">
                        {content.problem.list1.map((item) => (
                            <li class="flex items-start">
                                <span class="text-red-500 mr-3 text-xl">✗</span>
                                <span class="text-gray-700">{item}</span>
                            </li>
                        ))}
                    </ul>
                </div>
                <div class="bg-red-50 p-6 rounded-xl border border-red-100">
                    <ul class="space-y-4">
                        {content.problem.list2.map((item) => (
                            <li class="flex items-start">
                                <span class="text-red-500 mr-3 text-xl">✗</span>
                                <span class="text-gray-700">{item}</span>
                            </li>
                        ))}
                    </ul>
                </div>
            </div>
            <div class="text-center mt-10">
                <p class="font-semibold text-gray-800">{content.problem.summary}</p>
            </div>
        </div>
    </section>

    <!-- 3. NUESTRA PROPUESTA DE VALOR -->
    <section class="py-20 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-16">
                <h2 class="text-3xl font-bold text-gray-900 mb-4">{content.valueProposition.title}</h2>
                <p class="text-gray-600 max-w-2xl mx-auto">{content.valueProposition.description}</p>
            </div>
            <div class="grid md:grid-cols-4 gap-6 text-center">
                {content.valueProposition.cards.map((card) => (
                    <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-100 hover:shadow-md transition-shadow">
                        <div class="w-12 h-12 bg-lime-100 rounded-full flex items-center justify-center mx-auto mb-4 text-secondary font-bold text-xl">{card.number}</div>
                        <p class="text-gray-800 font-medium">{card.text}</p>
                    </div>
                ))}
            </div>
            <div class="text-center mt-12">
                <p class="text-xl font-medium text-primary">{content.valueProposition.summary}</p>
            </div>
        </div>
    </section>

    <!-- 4. SERVICIO PRINCIPAL -->
    <section class="py-20 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="bg-primary text-white rounded-3xl p-8 md:p-16 overflow-hidden relative">
                <!-- Background visual -->
                <div class="absolute top-0 right-0 w-64 h-64 bg-secondary opacity-20 rounded-full blur-3xl translate-x-1/2 -translate-y-1/2"></div>

                <div class="relative z-10 grid md:grid-cols-2 gap-12 items-center">
                    <div>
                        <h2 class="text-3xl md:text-4xl font-bold mb-6">{content.service.title}</h2>
                        <p class="text-gray-300 mb-8 text-lg">{content.service.description}</p>
                        
                        <div class="space-y-4 mb-8">
                            {content.service.details.map((detail) => (
                                <div class="flex items-center">
                                    <span class="bg-white/10 p-2 rounded-lg mr-4 text-secondary">{detail.icon}</span>
                                    <div>
                                        <span class="block text-sm text-gray-400">{detail.label}</span>
                                        <span class="font-semibold">{detail.value}</span>
                                    </div>
                                </div>
                            ))}
                        </div>
                    </div>
                    
                    <div class="bg-white/5 p-8 rounded-2xl backdrop-blur-sm border border-white/10">
                        <h3 class="text-xl font-bold mb-6 text-white">{content.service.includesTitle}</h3>
                        <ul class="space-y-3">
                            {content.service.includes.map((item) => (
                                <li class="flex items-start">
                                    <svg class="w-5 h-5 text-secondary mr-3 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                                    <span class="text-gray-300">{item}</span>
                                </li>
                            ))}
                        </ul>
                    </div>
                </div>
                <div class="mt-8 text-center border-t border-white/10 pt-8">
                    <p class="text-gray-400">{content.service.note}</p>
                </div>
            </div>
        </div>
    </section>

    <!-- 5. QUÉ NOS DIFERENCIA -->
    <section class="py-20 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <h2 class="text-3xl font-bold text-center text-gray-900 mb-12">{content.differentiation.title}</h2>
            <div class="grid sm:grid-cols-2 md:grid-cols-3 gap-8">
                {content.differentiation.cards.map((card) => (
                    <div class={`bg-white p-6 rounded-xl shadow-sm border-l-4 border-secondary ${card.fullWidth ? 'md:col-span-2' : ''}`}>
                        <p class="font-medium text-gray-900">{card.text}</p>
                    </div>
                ))}
            </div>
            <div class="text-center mt-12">
                <p class="text-2xl font-bold text-primary">{content.differentiation.summary}</p>
            </div>
        </div>
    </section>

    <!-- 6. A QUIÉN AYUDAMOS -->
    <section class="py-20 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid md:grid-cols-2 gap-12 items-center">
                <div>
                    <h2 class="text-3xl font-bold text-gray-900 mb-6">{content.targetAudience.title}</h2>
                    <p class="text-lg text-gray-600 mb-6">{content.targetAudience.description}</p>
                    <ul class="space-y-4">
                        {content.targetAudience.list.map((item) => (
                            <li class="flex items-center">
                                <span class="w-2 h-2 bg-secondary rounded-full mr-3"></span>
                                <span class="text-gray-700">{item}</span>
                            </li>
                        ))}
                    </ul>
                    <div class="mt-8 bg-orange-50 p-4 rounded-lg border border-orange-100 text-orange-800 text-sm">
                        <p>{content.targetAudience.note}</p>
                    </div>
                </div>
                <div class="bg-gray-100 rounded-2xl h-80 flex items-center justify-center border-2 border-dashed border-gray-300">
                    <!-- Placeholder for image -->
                    <span class="text-gray-400">{content.targetAudience.imagePlaceholder}</span>
                </div>
            </div>
        </div>
    </section>

    <!-- 7. CÓMO TRABAJAMOS -->
    <section id="how-we-work" class="py-20 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <h2 class="text-3xl font-bold text-center text-gray-900 mb-16">{content.methodology.title}</h2>
            <div class="relative">
                <!-- Line connector -->
                <div class="hidden md:block absolute top-1/2 left-0 w-full h-1 bg-gray-200 -translate-y-1/2 z-0"></div>
                
                <div class="relative z-10 grid grid-cols-1 md:grid-cols-5 gap-8">
                    {content.methodology.steps.map((step) => (
                        <div class="bg-white p-6 rounded-xl shadow-md text-center">
                            <div class="w-10 h-10 bg-primary text-white rounded-full flex items-center justify-center mx-auto mb-4 font-bold text-lg">{step.number}</div>
                            <h3 class="font-bold text-gray-900 mb-2">{step.title}</h3>
                            <p class="text-sm text-gray-600">{step.subtitle}</p>
                        </div>
                    ))}
                </div>
            </div>
            <div class="text-center mt-12 bg-blue-50 inline-block px-6 py-3 rounded-full mx-auto block w-max">
                <p class="text-primary font-medium">{content.methodology.note}</p>
            </div>
        </div>
    </section>

    <!-- 8. SOBRE NOSOTROS -->
    <section class="py-20 bg-white">
        <div class="max-w-4xl mx-auto px-4 text-center">
            <h2 class="text-3xl font-bold text-gray-900 mb-8">{content.about.title}</h2>
            <div class="prose prose-lg mx-auto text-gray-600">
                {content.about.text.map((paragraph, index) => (
                     <p class={index === content.about.text.length - 1 ? "font-medium text-gray-900" : "mb-6"}>
                        {paragraph}
                    </p>
                ))}
            </div>
        </div>
    </section>

    <!-- 9. PREGUNTAS FRECUENTES -->
    <section class="py-20 bg-gray-50">
        <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
            <h2 class="text-3xl font-bold text-center text-gray-900 mb-12">{content.faq.title}</h2>
            <div class="space-y-6">
                {content.faq.items.map((item) => (
                    <div class="bg-white p-6 rounded-lg shadow-sm">
                        <h3 class="font-bold text-gray-900 mb-2">{item.question}</h3>
                        <p class="text-gray-600">{item.answer}</p>
                    </div>
                ))}
            </div>
        </div>
    </section>

    <!-- 10. CTA FINAL -->
    <section id="contact" class="py-24 bg-primary text-white text-center relative overflow-hidden">
        <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-transparent via-secondary to-transparent opacity-50"></div>
        <div class="max-w-4xl mx-auto px-4 relative z-10">
            <h2 class="text-3xl md:text-5xl font-bold mb-6">{content.ctaFinal.title}</h2>
            <div class="mt-10">
                <a href="/contact" class="inline-block px-10 py-5 bg-secondary text-white font-bold text-lg rounded-lg hover:bg-lime-600 transition-colors shadow-lg hover:shadow-lime-500/30">
                    {content.ctaFinal.button}
                </a>
            </div>
        </div>
    </section>
</MainLayout>
